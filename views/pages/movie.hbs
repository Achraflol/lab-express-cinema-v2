<section class="container">
    <div class="row">
        <div class="row">
            <div class="col-md-3">
                <img src="{{image}}" alt="{{title}}">
            </div>
            <div class="col-md-9">
                <a class="link" href="/list-movies" class="">Go back</a>
                <h2>{{title}}</h2>
                <h3>Director: {{director}}</h3>
                <p>{{description}}</p>
                {{#each showtimes}}
                <span> {{this}} |</span>
                {{/each}}
            </div>
        </div>
    </div>

</section>